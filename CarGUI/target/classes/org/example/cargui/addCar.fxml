<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.cargui.AddCarController">

    <padding>
        <Insets top="5" left="5" bottom="5" right="5"/>
    </padding>
    <children>
        <TitledPane animated="false" text="Add new car" collapsible="false">
            <content>
                <GridPane hgap="10" vgap="10">
                    <padding>
                        <Insets top="10" left="10" bottom="10" right="10"/>
                    </padding>
                    <children>
                        <Label text="Manufacturer" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="manufacturerField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Model" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="modelField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Plate Number" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="plateField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Weight (kg)" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="weightField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Label text="Max speed (km/h)" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <TextField fx:id="maxSpeedField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>


                        <Label text="Typ Silnika:" prefWidth="100.0" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="engineTypeCombo" prefWidth="200.0" GridPane.rowIndex="5" GridPane.columnIndex="1"/>


                        <HBox spacing="10" GridPane.rowIndex="6" GridPane.columnIndex="1">
                            <Button fx:id="confirmButton" text="Confirm" onAction="#onConfirm"/>
                            <Button fx:id="cancelButton" text="Cancel" onAction="#onCancel"/>
                        </HBox>
                    </children>
                </GridPane>
            </content>
        </TitledPane>
    </children>
</VBox>